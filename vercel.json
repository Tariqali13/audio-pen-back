{
  "version": 2,
  "builds": [
    {
      "src": "app.js",
      "use": "@now/node",
      "config": {
        "includeFiles": ["config/*", "src/**", "bin/*"],
        "bundle": false
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.js"
    }
  ],
  "functions": {
    "src/api/**": {
      "maxDuration": 100
    }
  }
}
